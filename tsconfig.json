{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ESNext"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "strict": true,
    "incremental": true,
    "allowJs": true,
    "moduleResolution": "node",
    "target": "ES2019",
    "module": "ESNext",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["**/*", "@types", "./globals.d.ts"],
  "exclude": ["**/node_modules/*"]
}
